<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light"
    android:id="@+id/crisismenu"
    tools:context=".CrisisMenu">

    <Button
        android:id="@+id/Settings1"
        android:layout_width="182dp"
        android:layout_height="118dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintDimensionRatio="2:1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="113dp" />

    <Button
        android:id="@+id/groupchat1"
        android:layout_width="190dp"
        android:layout_height="113dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/Group_Chat"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintDimensionRatio="2:1"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/logout1"
        android:layout_width="192dp"
        android:layout_height="108dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/logout_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintDimensionRatio="2:1"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="123dp" />

    <Button
        android:id="@+id/locationlog1"
        android:layout_width="186dp"
        android:layout_height="112dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/Location_Log"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintDimensionRatio=""
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/crisiscallbutton1"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/call_button"
        android:text="@string/Crisis_Call"
        android:textSize="25pt"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:translationZ="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisiscallbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/focus_box" />

    <ImageView
        android:id="@+id/blur2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationZ="6dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisiscallbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/focusbox" />


</android.support.constraint.ConstraintLayout>