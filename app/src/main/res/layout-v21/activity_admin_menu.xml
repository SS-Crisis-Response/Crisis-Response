<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light"
    tools:context=".MainActivity"
    android:id="@+id/adminmenu">

    <Button
        android:id="@+id/crisistype1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/redbuttons"
        android:text="@string/crisis1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="101dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisistype2"
        app:layout_constraintDimensionRatio="5.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/crisistype2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bluebuttonnormal"
        android:text="@string/crisis2"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="101dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisistype3"
        app:layout_constraintDimensionRatio="5.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crisistype1"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/crisistype3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/greenbuttonnormal"
        android:text="@string/crisis3"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="101dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisistype4"
        app:layout_constraintDimensionRatio="5.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crisistype2" />

    <Button
        android:id="@+id/crisistype4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/unlisted_crisis"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="101dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crisistype3" />

    <Button
        android:id="@+id/usermanager"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/User_Managememt"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/calloptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Settings" />

    <Button
        android:id="@+id/Settings"
        android:layout_width="181dp"
        android:layout_height="108dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/usermanager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationlog" />

    <Button
        android:id="@+id/calloptions"
        android:layout_width="186dp"
        android:layout_height="106dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/Call_Option"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/crisistype3"
        app:layout_constraintTop_toBottomOf="@+id/crisistype2" />

    <Button
        android:id="@+id/buildingandroommanagement"
        android:layout_width="186dp"
        android:layout_height="106dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/building_and_room_management"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/crisistype3"
        app:layout_constraintTop_toBottomOf="@+id/crisistype2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/groupchat"
        android:layout_width="193dp"
        android:layout_height="116dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/Group_Chat"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/usermanager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/locationlog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/logout"
        android:layout_width="196dp"
        android:layout_height="113dp"
        android:layout_marginStart="336dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/redbuttons"
        android:text="@string/Logout"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/crisiscallbutton"
        app:layout_constraintEnd_toStartOf="@+id/crisistype4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calloptions" />

    <Button
        android:id="@+id/locationlog"
        android:layout_width="182dp"
        android:layout_height="118dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/Location_Log"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Settings"
        app:layout_constraintEnd_toStartOf="@+id/groupchat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/crisiscallbutton"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/call_button"
        android:text="@string/Crisis_Call"
        android:textAllCaps="false"
        android:textSize="25pt"
        android:translationZ="80dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/blur"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationZ="6dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisiscallbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@color/focusbox" />

</android.support.constraint.ConstraintLayout>