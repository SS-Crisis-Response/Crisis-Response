<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light"
    tools:context=".MainActivity"
    android:id="@+id/adminmenu">

    <Button
        android:id="@+id/crisistype1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/redbuttons"
        android:text="@string/physical"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="101dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisistype2"
        app:layout_constraintDimensionRatio="5.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/crisistype2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bluebuttonnormal"
        android:text="@string/medical"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="101dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisistype3"
        app:layout_constraintDimensionRatio="5.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crisistype1"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/crisistype3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/greenbuttonnormal"
        android:text="@string/weapon"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="101dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisistype4"
        app:layout_constraintDimensionRatio="5.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crisistype2" />

    <Button
        android:id="@+id/crisistype4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/unlisted_crisis"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="101dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5.1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crisistype3" />


    <Button
        android:id="@+id/Settings1"
        android:layout_width="192dp"
        android:layout_height="128dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/Settings1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationlog1" />


    <Button
        android:id="@+id/groupchat1"
        android:layout_width="180dp"
        android:layout_height="114dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="565dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/groupchat1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/locationlog1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/logout1"
        android:layout_width="176dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/redbuttons"
        android:text="@string/logout1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/crisiscallbutton1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/locationlog1"
        android:layout_width="192dp"
        android:layout_height="113dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/menu_buttons"
        android:text="@string/locationlog1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Settings1"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintEnd_toStartOf="@+id/logout1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/crisiscallbutton1"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/call_button"
        android:text="@string/crisiscallbutton1"
        android:textAllCaps="false"
        android:textSize="25pt"
        android:translationZ="80dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/blur2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationZ="6dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crisiscallbutton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@color/focusbox" />

</android.support.constraint.ConstraintLayout>